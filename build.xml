<?xml version="1.0" encoding="UTF-8"?>
<project name="CorpsBlog" default="help">
  <property file="ant.local.properties"/>
  <property file="ant.properties"/>
  <property name="kotlin.lib" value="${kotlin.dir}/lib"/>
  <typedef resource="org/jetbrains/kotlin/ant/antlib.xml"
           classpath="${kotlin.lib}/kotlin-ant.jar"/>
  
  
  <target name="help">
    <echo>

Targets:

    build            Build out/corpsblog.jar
    build-remote     Build out/corpsblog.jar for JDK 1.7, and install it
                     (This is for the feature of uploading via a remote shell)
    install          Install out/corpsblog.jar to ${install.dir}
    clean            Remove all generated files
    docs             Update the contents of docs
    all		     Everyting (install and docs)

    </echo>
  </target>

  <target name="clean">
    <delete dir="${out.dir}"/>
  </target>


  <target name="build-remote">
    <mkdir dir="${out.dir}"/>
    <delete dir="${out.dir}/classes" failonerror="false"/>
    <mkdir dir="${out.dir}/classes"/>
    <javac destdir="${out.dir}/classes" 
    	includeAntRuntime="false" 
	srcdir="src"
	bootclasspath="${jdk.home}/jre/lib/rt.jar"
	target="1.7"
	source="1.7"
    >
        <withKotlin/>
    </javac>
    <jar destfile="${out.dir}/${out.jar}"
         manifest="src/META-INF/MANIFEST.MF">
        <fileset dir="${out.dir}/classes"/>
	<zipfileset src="${kotlin.dir}/lib/kotlin-runtime.jar"/>
    </jar>
    <exec executable="${user.home}/lib/corpsblog_remote_upload.scp">
      <arg value="out/corpsblog.jar"/>
    </exec>
  </target>

  <target name="check-jar">
    <available file="${out.dir}/${out.jar}" property="out.jar.present"/>
  </target>
  <target name="build-jar-if-needed" unless="out.jar.present">
    <ant target="build"/>
  </target>
    

  <target name="install" depends="check-jar, build-jar-if-needed">
    <copy file="${out.dir}/${out.jar}" todir="${install.dir}" force="true"
    	  verbose="true" overwrite="true"/>
  </target>

  <target name="docs" depends="check-jar, build-jar-if-needed">
    <copy file="${out.dir}/${out.jar}" todir="docs" force="true"
    	  verbose="true" overwrite="true"/>
  </target>

  <target name="all" depends="install, docs" />
</project>

